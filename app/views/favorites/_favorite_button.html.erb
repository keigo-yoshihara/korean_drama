<% if current_user.favorite?(drama) %>
  <%= form_with(model: current_user.favorites.find_by(drama_id: drama.id), method: :delete) do |f| %>
    <%= hidden_field_tag :drama_id, drama.id %>
    <%= f.submit '観たいリストから削除', class: 'btn btn-danger w-100' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :drama_id, drama.id %>
    <%= f.submit '観たいリストに追加', class: 'btn btn-primary w-100' %>
  <% end %>
<% end %>