<% if dramas.any? %>
  <ul class="list-unstyled mt-2">
    <% dramas.each do |drama| %>
      <li class="row">
        <div class="col-3">
          <img class="rounded img-fluid me-2 mb-5" src="<%= gravatar_url(drama.user, { size: 96}) %>" alt="">
        </div>
        <div class="col-9">
          <div>
            <%= link_to drama.user.name, user_path(drama.user), class: "text-decoration-none" %> <span class="text-muted">posted at <%= drama.created_at %></span>
          </div>
          <div>
            <p>〜タイトル〜<br><%= drama.title %></p>
            <p>〜感想〜<br><%= drama.content %></p>
            <p>評価⭐️<%= drama.rating %></p>
          </div>
          <div>
            <% if current_user == drama.user %>
              <%= link_to "削除", drama, method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
            <% if logged_in? %>
              <%= render 'favorites/favorite_button', drama:drama %>
            <% end %>
            <hr width="400">
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>